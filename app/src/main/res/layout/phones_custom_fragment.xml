 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/txtPlacesTitle">

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/example_phone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableLeft="@drawable/call"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/abc_action_bar_default_padding_material"
        android:drawablePadding="@dimen/abc_action_bar_default_padding_material"
        />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/example_phone_number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/abc_action_bar_default_padding_material"
        android:layout_gravity="center"
        android:gravity="center" />

 </LinearLayout>

